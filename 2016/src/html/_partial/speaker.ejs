<% var speaker = speakers[id] %>
<a href="<%= speaker.url %>" class="speaker" data-key="<%= id %>">
  <div class="speaker-image">
    <div class="Hex">
      <div class="Hex-outer">
        <div class="Hex-inner">
          <img src="img/pic-<%= id %>.jpg" class="Hex-image">
        </div>
      </div>
    </div>
  </div>
  <div class="speaker-info">
    <p class="speaker-name">
      <%= speaker.name %>
    </p>
    <% if (speaker.twitter) { %>
    <p class="speaker-links">
      @<%= speaker.twitter %>
    </p>
    <% } %>
  </div>
</a>
