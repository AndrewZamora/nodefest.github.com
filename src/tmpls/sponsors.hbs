{{> first }}

<section class="mod-section">
	<div class="mod-heading">
		<h1>
			<span class="mod-heading-en">Sponsors</span>
			<span class="mod-heading-ja">スポンサー紹介</span>
		</h1>
	</div>

	{{#each sponsor.sponsors}}
	<section class="mod-sponsor">
		<a href="{{ url }}">
			<div class="mod-sponsor-image">
				<img src="{{ image }}" alt="{{ name }}">
			</div>
			<h1>{{ name }}</h1>
			{{#markdown}}{{ text }}{{/markdown}}
		</a>
	</section>
	{{/each}}

</section>

